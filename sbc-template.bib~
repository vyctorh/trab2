@ARTICLE{McDaniel2009,
  author = {McDaniel, P. and McLaughlin, S.},
  title = {Security and Privacy Challenges in the Smart Grid},
  journal = {IEEE Security \& Privacy},
  year = {2009},
  volume = {7},
  number = {3},
  __markedentry = {[victor:2]},
  comment = {Cited by 251},
  doi = {10.1109/MSP.2009.76},
  file = {:/home/victor/Documentos/EstOrientado/smart grids/Security and Privacy Challenges in the Smart Grid.pdf:PDF},
  issn = {1540-7993},
  review = {Quatro dimensões de privacidade são considerados: 
	
	(1) informações pessoais - qualquer informação relativa a uma pessoa,
	que pode ser identificada, direta ou indiretamente, pelo que a informação
	e, em particular por referência a uma identificação número ou a um
	ou mais elementos específicos da sua identidade física, fisiológica,
	psíquica, identidade, econômica, cultural, de localização ou social;
	
	(2) privacidade pessoal - direito de controlar a integridade do próprio
	corpo; 
	
	(3) privacidade comportamental - direito dos indivíduos a fazer as
	suas próprias escolhas sobre o que fazer e de manter certos comportamentos
	pessoais de serem compartilhados com outros; e 
	
	(4) privacidade nas comunicações pessoais - o direito de se comunicar
	sem a indevida vigilância, monitoramento ou censura.}
}

